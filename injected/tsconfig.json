{
	"compilerOptions": {
		"target": "ES2020",
		"strict": true,
		"noEmit": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"isolatedModules": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"jsx": "preserve",
		"jsxFactory": "h",
		"jsxFragmentFactory": "DocumentFragment"
	},
	"include": ["src/**/*"]
}